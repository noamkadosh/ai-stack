{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "theme": "tokyonight",
  "share": "disabled",
  "instructions": [
    "AGENTS.md",
    "docs/*.md"
  ],
  "tools": {
    "write": true,
    "edit": true,
    "bash": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "webfetch": true,
    "MCP_DOCKER": true
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "git status": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git add*": "ask",
      "git commit*": "ask",
      "git push*": "ask",
      "npm test*": "allow",
      "npm run test*": "allow",
      "npm install": "ask",
      "npm ci": "ask",
      "cd*": "allow",
      "ls*": "allow",
      "cat*": "allow",
      "less*": "allow",
      "more*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "grep*": "allow",
      "egrep*": "allow",
      "fgrep*": "allow",
      "rg*": "allow",
      "find*": "allow",
      "sed*": "allow",
      "awk*": "allow",
      "wc*": "allow",
      "sort*": "allow",
      "uniq*": "allow",
      "pwd*": "allow",
      "pushd*": "allow",
      "popd*": "allow",
      "dirs*": "allow",
      "which*": "allow",
      "whoami*": "allow",
      "echo*": "allow",
      "printf*": "allow",
      "file*": "allow",
      "stat*": "allow",
      "tree*": "allow",
      "du*": "allow",
      "df*": "allow",
      "env*": "allow",
      "printenv*": "allow",
      "export*": "allow",
      "alias*": "allow",
      "unalias*": "allow",
      "type*": "allow",
      "command*": "allow",
      "date*": "allow",
      "jq*": "allow",
      "yq*": "allow",
      "cut*": "allow",
      "paste*": "allow",
      "tr*": "allow",
      "dirname*": "allow",
      "basename*": "allow",
      "realpath*": "allow",
      "readlink*": "allow",
      "diff*": "allow",
      "comm*": "allow",
      "cmp*": "allow",
      "md5*": "allow",
      "sha*": "allow",
      "shasum*": "allow",
      "base64*": "allow",
      "column*": "allow",
      "nl*": "allow",
      "pr*": "allow",
      "fold*": "allow",
      "expand*": "allow",
      "unexpand*": "allow",
      "rev*": "allow",
      "tac*": "allow",
      "yes*": "allow",
      "seq*": "allow",
      "shuf*": "allow",
      "sleep*": "allow",
      "true*": "allow",
      "false*": "allow",
      "test*": "allow",
      "time*": "allow",
      "timeout*": "allow",
      "watch*": "allow",
      "bc*": "allow",
      "expr*": "allow",
      "calc*": "allow",
      "rm -rf*": "deny",
      "rm -fr*": "deny",
      "npm publish*": "ask",
      "yarn publish*": "ask",
      "docker*": "ask",
      "*": "ask"
    },
    "webfetch": "ask"
  },
  "agent": {
    "build": {
      "description": "Default agent for building and modifying code",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.2,
      "topP": 0.95,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true
      },
      "permission": {
        "edit": "allow",
        "webfetch": "allow",
        "bash": {
          "git status": "allow",
          "git diff*": "allow",
          "git log*": "allow",
          "git branch*": "allow",
          "git show*": "allow",
          "git add*": "allow",
          "git commit*": "allow",
          "npm test*": "allow",
          "npm run*": "allow",
          "npm install": "allow",
          "npm ci": "allow",
          "whoami*": "allow",
          "find*": "allow",
          "sort*": "allow",
          "cd*": "allow",
          "echo*": "allow",
          "ls*": "allow",
          "pwd*": "allow",
          "cat*": "allow",
          "head*": "allow",
          "tail*": "allow",
          "uname*": "allow",
          "id*": "allow",
          "env*": "allow",
          "printenv*": "allow",
          "df*": "allow",
          "free*": "allow",
          "ps*": "allow",
          "grep*": "allow",
          "uniq*": "allow",
          "wc*": "allow",
          "diff*": "allow",
          "tree*": "allow",
          "type*": "allow",
          "hostname*": "allow",
          "netstat*": "allow",
          "which*": "allow",
          "awk*": "allow",
          "rm -rf*": "deny",
          "rm -fr*": "deny",
          "git push*": "ask",
          "git push --force*": "deny",
          "npm publish*": "ask",
          "yarn publish*": "ask",
          "docker*": "allow",
          "*": "ask"
        }
      }
    },
    "plan": {
      "description": "Planning agent for analyzing code without modifications",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.1,
      "topP": 0.9,
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "webfetch": true
      },
      "permission": {
        "webfetch": "allow",
        "bash": {
          "git status": "allow",
          "git diff*": "allow",
          "git log*": "allow",
          "git branch*": "allow",
          "git show*": "allow",
          "npm test*": "allow",
          "npm run test*": "allow",
          "whoami*": "allow",
          "find*": "allow",
          "sort*": "allow",
          "cd*": "allow",
          "echo*": "allow",
          "ls*": "allow",
          "pwd*": "allow",
          "cat*": "allow",
          "head*": "allow",
          "tail*": "allow",
          "uname*": "allow",
          "id*": "allow",
          "env*": "allow",
          "printenv*": "allow",
          "df*": "allow",
          "free*": "allow",
          "ps*": "allow",
          "grep*": "allow",
          "uniq*": "allow",
          "wc*": "allow",
          "diff*": "allow",
          "tree*": "allow",
          "type*": "allow",
          "hostname*": "allow",
          "which*": "allow",
          "awk*": "allow",
          "sed*": "deny",
          "export*": "deny",
          "alias*": "deny",
          "unalias*": "deny",
          "rm -rf*": "deny",
          "git push*": "deny",
          "git commit*": "deny",
          "git add*": "deny",
          "npm install": "deny",
          "*": "ask"
        }
      }
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "thinking": { "type": "enabled", "budgetTokens": 10000 }
          }
        },
        "claude-opus-4-1": {
          "options": {
            "thinking": { "type": "enabled", "budgetTokens": 16000 }
          }
        }
      }
    }
  },
  "mcp": {
    "MCP_DOCKER": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run", "--catalog", "mcp-servers"]
    }
  }
}
