{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "theme": "tokyonight",
  "share": "disabled",
  "instructions": [
    "AGENTS.md",
    "./docs/*.md",
    "packages/*/AGENTS.md",
    ".cursor/rules/*.md",
    "CONTRIBUTING.md"
  ],
  "tools": {
    "write": true,
    "edit": true,
    "bash": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "webfetch": true
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "git status": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git add*": "ask",
      "git commit*": "ask",
      "git push*": "ask",
      "npm test*": "allow",
      "npm run test*": "allow",
      "npm install": "ask",
      "npm ci": "ask",
      "rm -rf*": "deny",
      "rm -fr*": "deny",
      "npm publish*": "ask",
      "yarn publish*": "ask",
      "docker*": "ask",
      "*": "ask"
    },
    "webfetch": "ask"
  },
  "agent": {
    "build": {
      "description": "Default agent for building and modifying code",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.2,
      "topP": 0.95,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "universal_gateway": true,
        "base_gateway": true
      },
      "permission": {
        "bash": { "git push*": "ask", "rm -rf*": "deny", "npm publish*": "ask" }
      }
    },
    "plan": {
      "description": "Planning agent for analyzing code without modifications",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.1,
      "topP": 0.9,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "universal_gateway": true,
        "base_gateway": true
      }
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "thinking": { "type": "enabled", "budgetTokens": 10000 }
          }
        },
        "claude-opus-4-1": {
          "options": {
            "thinking": { "type": "enabled", "budgetTokens": 16000 }
          }
        }
      }
    }
  },
  "mcp": {
    "architect_gateway": {
      "type": "local",
      "command": [
        "docker",
        "mcp",
        "gateway",
        "run",
        "--secrets",
        "./.env",
        "--catalog",
        "architect.yaml",
        "--transport",
        "streaming"
      ],
      "enabled": true
    },
